!!! 5
%html
  %head
    %title Map Games - Spaß mit Geodaten
    = stylesheet_link_tag "application", "bootstrap", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "jquery_drag_drop"
    = csrf_meta_tags
    
  -# pass the action to body as data so we can load CoffeeScript accoring to the selected Action  
  %body{ :data => { :controller => params[:controller], :action => params[:action]} }

    -# Navigation
    .navbar
      .navbar-inner
        .container
          %a.brand{ :href => "/" } Map Games
          .nav-collapse
            %ul.nav
              %li= link_to( "Die Größten Städte",   {:controller => 'games', :cat => 'biggest_cities'} )
              %li= link_to( "Städte lokalisieren",  {:controller => 'games', :cat => 'empty_map'} )

    -# Content-Container
    .container
      = yield
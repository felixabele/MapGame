<div class="page-header">
    <h1>Alle Spiele</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Spiel</th>
      <th>Herausforderung</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  <% @games.each do |game| %>
    <tr>
      <td><h3><%= game.name %></h3></td>
      <td><%= game.description %></td>
      <td><%= link_to( 'Spiel starten', biggest_10_cities_path(game)) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

